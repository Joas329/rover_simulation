<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  >

    <!-- <xacro:include filename="robot_core.xacro"/> -->

    <!--ROS2_CONTROL MACROS-->

    <!--Joint Creator-->

    <xacro:macro name="joint_creator" params="name">
        <joint name="${name}">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>

            <state_interface name="velocity"/>
            <state_interface name="position"/>

        </joint>
    </xacro:macro>

    <!--ROBOT_CORE MACROS-->

    <!--Encoder Wheel Macro-->

    <xacro:macro name="wheel" params="name origin direction axis">

        <joint name="${name}_joint" type="continuous">
            <parent link="base_link" />
            <child link="${name}" />
            <origin xyz="${origin}" rpy="${direction}${pi/2} 0 0" />
            <axis xyz="0 0 ${axis}1" />
        </joint>

        <link name="${name}">

            <visual>
                <material name="blue"/>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
            </visual>

            <collision>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
            </collision>

            <xacro:inertial_cylinder mass="0.5" length="${wheel_length}" radius="${wheel_radius}">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>

        
        </link>

        <gazebo reference="${name}">
            <material>Gazebo/Blue</material>   
        </gazebo>
    </xacro:macro>

    <!--NOT Enconder Wheel Macro-->
    <xacro:macro name="dummy_wheel" params="name origin direction axis">

        <joint name="${name}_joint" type="continuous">
            <parent link="base_link" />
            <child link="${name}" />
            <origin xyz="${origin}" rpy="${direction}${pi/2} 0 0" />
            <axis xyz="0 0 ${axis}1" />
        </joint>

        <link name="${name}">

            <visual>
                <material name="orange"/>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
            </visual>

            <collision>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
            </collision>

            <xacro:inertial_cylinder mass="0.5" length="${wheel_length}" radius="${wheel_radius}">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>

        
        </link>

        <gazebo reference="${name}">
            <material>Gazebo/Orange</material>   
            <mu1 value="0.001"/>   
            <mu2 value="0.001"/>  
        </gazebo>
    </xacro:macro>


    <!--Inertial Macros-->

    <xacro:macro name="inertial_sphere" params="mass radius *origin">
        <inertial>
            <xacro:insert_block name="origin"/>
            <mass value="${mass}" />
            <inertia ixx="${(2/5) * mass * (radius*radius)}" ixy="0.0" ixz="0.0"
                    iyy="${(2/5) * mass * (radius*radius)}" iyz="0.0"
                    izz="${(2/5) * mass * (radius*radius)}" />
        </inertial>
    </xacro:macro>  


    <xacro:macro name="inertial_box" params="mass x y z *origin">
        <inertial>
            <xacro:insert_block name="origin"/>
            <mass value="${mass}" />
            <inertia ixx="${(1/12) * mass * (y*y+z*z)}" ixy="0.0" ixz="0.0"
                    iyy="${(1/12) * mass * (x*x+z*z)}" iyz="0.0"
                    izz="${(1/12) * mass * (x*x+y*y)}" />
        </inertial>
    </xacro:macro>


    <xacro:macro name="inertial_cylinder" params="mass length radius *origin">
        <inertial>
            <xacro:insert_block name="origin"/>
            <mass value="${mass}" />
            <inertia ixx="${(1/12) * mass * (3*radius*radius + length*length)}" ixy="0.0" ixz="0.0"
                    iyy="${(1/12) * mass * (3*radius*radius + length*length)}" iyz="0.0"
                    izz="${(1/2) * mass * (radius*radius)}" />
        </inertial>
    </xacro:macro>

    <!--Arm Inertial Macros-->

    <xacro:property name="intom" value="0.0254"/>
	<xacro:property name="lbtokg" value="0.454"/>
	<xacro:property name="lbsqintokgsqm" value="703.07"/>

    <xacro:macro name="sw_origin" params="x y z roll:=0 pitch:=0 yaw:=0">
        <origin xyz="${x*intom} ${-z*intom} ${y*intom}" rpy="${roll} ${pitch} ${yaw}"/>
    </xacro:macro>

    <xacro:macro name="sw_visual" params="file">
        <visual>
            <origin xyz="0 0 0" rpy="${radians(90)} 0 0"/>
            <geometry>
                <mesh filename="package://my_bot/description/mesh/${file}.STL"/>
            </geometry>
            <material name="white"/>
        </visual>
    </xacro:macro>

    <!-- Units: lb, in, lb*in^2 -->
    <xacro:macro name="sw_inertial" params="m X Y Z Lxx Lxy Lxz Lyy Lyz Lzz">
        <inertial>
            <mass value="${m*lbtokg}"/>
            <xacro:sw_origin x="${X}" y="${Y}" z="${Z}"/>
            <inertia
                ixx="${Lxx*lbsqintokgsqm}" ixy="${Lxz*lbsqintokgsqm}" ixz="${-Lxy*lbsqintokgsqm}"
                iyy="${Lzz*lbsqintokgsqm}" iyz="${-Lyz*lbsqintokgsqm}"
                izz="${Lyy*lbsqintokgsqm}"/>
        </inertial>
    </xacro:macro>

</robot>